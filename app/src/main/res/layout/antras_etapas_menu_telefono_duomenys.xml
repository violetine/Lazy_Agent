<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="72dp"
    android:background="#b2ebf2"
    >

    <LinearLayout
        android:paddingLeft="16dp"
        android:background="#00838f"
        android:id="@+id/skrendancios_smegenys"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/menu_brains"
            android:background="@drawable/smegenys_grazios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quad-core 1.4 GHz Cortex-A9"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/smegenu_paaiskinimas"/>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:paddingLeft="16dp"
        android:background="#00838f"
        android:id="@+id/skrendantis_procas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/menu_chip"
        android:background="@drawable/chipas_grazus"
        android:layout_width="128dp"
        android:layout_height="128dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exynos 4412 Quad"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cipo_paaiskinimas"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:paddingLeft="16dp"
            android:background="#00838f"
            android:id="@+id/skrendantis_foikas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/menu_foto"
        android:background="@drawable/foto_grazi"
        android:layout_width="128dp"
        android:layout_height="128dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quad-core 1.4 GHz Cortex-A9"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/foto_paaiskinimas"/>

            </LinearLayout>

        </LinearLayout>



</LinearLayout>